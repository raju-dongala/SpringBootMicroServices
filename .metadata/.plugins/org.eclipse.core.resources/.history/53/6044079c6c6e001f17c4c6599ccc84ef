package com.app;

import org.springframework.cloud.gateway.route.RouteLocator;
import org.springframework.cloud.gateway.route.builder.RouteLocatorBuilder;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

@Configuration
public class MyConfigurationGateWay {
	
	@Bean
	public RouteLocator routeConfigurations(RouteLocatorBuilder builder) {
		return builder.routes()
				      .route("addressService", r->r.path("/v1/api/address").uri("lb://Address-Service-App"))
				      .route("addressService", r->r.path("/v1/api/student").uri("lb://Student-Service-App"))
				      .build();
	}
	

}
